{
  "name": "@hijraah/workflows",
  "version": "0.1.0",
  "description": "Background job processing and workflow orchestration for Hijraah using Trigger.dev v3",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npx tsc",
    "dev": "npx tsc --watch",
