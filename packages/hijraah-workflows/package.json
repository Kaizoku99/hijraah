{
  "name": "@hijraah/workflows",
  "version": "0.1.0",
  "description": "Background job processing and workflow orchestration for Hijraah using Trigger.dev v3",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npx tsc",
    "dev": "npx tsc --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "npx tsc --noEmit",
    "trigger:dev": "npx trigger.dev@latest dev"
  },
  "dependencies": {
    "@trigger.dev/sdk": "catalog:",
    "@hijraah/ai": "workspace:*",
    "@hijraah/documents": "workspace:*",
    "@hijraah/types": "workspace:*",
    "zod": "catalog:",
    "openai": "catalog:",
    "firecrawl": "catalog:",
    "@supabase/supabase-js": "catalog:"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "typescript": "catalog:",
    "eslint": "catalog:",
    "@hijraah/eslint-config": "workspace:*",
    "@hijraah/typescript-config": "workspace:*"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "restricted"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/hijraah.git",
    "directory": "packages/hijraah-workflows"
  }
}