{
  "name": "@hijraah/types",
  "version": "0.1.0",
  "description": "Shared TypeScript types for Hijraah workspace",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "npx tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "devDependencies": {
    "@hijraah/typescript-config": "workspace:*",
    "@types/node": "catalog:",
    "typescript": "catalog:",
    "tsup": "catalog:",
    "eslint": "catalog:",
    "@typescript-eslint/eslint-plugin": "catalog:",
    "@typescript-eslint/parser": "catalog:"
  },
  "publishConfig": {
    "access": "restricted"
  }
}