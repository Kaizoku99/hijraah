# Base Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Supabase configuration
# Get these values from your Supabase project dashboard at:
# https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Database URL for Drizzle (PostgreSQL connection to Supabase)
# Replace [YOUR_DB_PASSWORD] with your actual database password from Supabase
DATABASE_URL=postgresql://postgres:[YOUR_DB_PASSWORD]@db.your-project-ref.supabase.co:5432/postgres

# Optional: For admin operations (required for some backend operations)
# WARNING: Keep this secret and never expose it to the client
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# AI Service Keys
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Redis for rate limiting, caching
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token-here
REDIS_URL=redis://default:your-redis-token@your-redis-url.upstash.io:6379

# Application URL - used for API requests in server components
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Firecrawl
FIRECRAWL_API_KEY=fc-your-firecrawl-api-key-here

# i18n
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,ar,fr,es

# Auth Secret (generate with: npx auth secret)
AUTH_SECRET="your-auth-secret-here"

# Upstash Redis Configuration (Optional)
UPSTASH_REDIS_REST_URL=your-upstash-redis-rest-url
UPSTASH_REDIS_REST_TOKEN=your-upstash-redis-rest-token

# AI API Keys (Optional)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
MISTRAL_API_KEY=your-mistral-api-key
DEEPSEEK_API_KEY=your-deepseek-api-key
GOOGLE_API_KEY=your-google-api-key
FIREWORKS_API_KEY=your-fireworks-api-key

# Sentry Configuration (Optional)
SENTRY_DSN=your-sentry-dsn
SENTRY_RELEASE=dev

# Auto-scaling Configuration (Optional)
AUTO_SCALING_ENABLED=false
AUTO_SCALING_PROVIDER=vercel

# NextAuth Configuration (if using NextAuth instead of Supabase Auth)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret

# Development Configuration
NODE_ENV=development
VERCEL_ENV=development
