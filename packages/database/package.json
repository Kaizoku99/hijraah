{
  "name": "@hijraah/database",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./schema": {
      "types": "./src/schema.ts",
      "default": "./src/schema.ts"
    },
    "./client": {
      "types": "./src/client.ts",
      "default": "./src/client.ts"
    },
    "./migrations": {
      "types": "./src/migrations.ts",
      "default": "./src/migrations.ts"
    },
    "./types": {
      "types": "./src/types.ts",
      "default": "./src/types.ts"
    }
  },
  "scripts": {
    "dev": "drizzle-kit studio",
    "generate": "drizzle-kit generate",
    "migrate": "drizzle-kit migrate",
    "push": "drizzle-kit push",
    "pull": "drizzle-kit pull",
    "check": "drizzle-kit check",
    "up": "drizzle-kit up",
    "drop": "drizzle-kit drop",
    "introspect": "drizzle-kit introspect",
    "validate": "drizzle-kit validate",
    "type-check": "npx tsc --noEmit",
    "build": "npx tsc"
  },
  "dependencies": {
    "drizzle-orm": "^0.43.1",
    "drizzle-zod": "^0.8.2",
    "postgres": "^3.4.3",
    "pg": "^8.13.1",
    "@supabase/supabase-js": "^2.47.10",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@hijraah/typescript-config": "workspace:*",
    "@hijraah/eslint-config": "workspace:*",
    "drizzle-kit": "^0.31.2",
    "typescript": "^5.8.3",
    "@types/pg": "^8.11.10",
    "@types/node": "^20"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
