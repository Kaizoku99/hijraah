# Hijraah MAS Environment Configuration
# Copy this file to .env and update the values

# =============================================================================
# Application Settings
# =============================================================================
HIJRAAH_MAS_APP_NAME="Hijraah MAS"
HIJRAAH_MAS_APP_VERSION="0.1.0"
HIJRAAH_MAS_DEBUG=false
HIJRAAH_MAS_ENVIRONMENT=development

# =============================================================================
# API Settings
# =============================================================================
HIJRAAH_MAS_HOST=0.0.0.0
HIJRAAH_MAS_PORT=8000
HIJRAAH_MAS_RELOAD=true
HIJRAAH_MAS_WORKERS=1

# =============================================================================
# Supabase Configuration
# =============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-service-role-key
HIJRAAH_MAS_SUPABASE_JWT_SECRET=your-jwt-secret

# =============================================================================
# Database Configuration
# =============================================================================
HIJRAAH_MAS_DATABASE_URL=postgresql://user:password@localhost:5432/hijraah_mas
HIJRAAH_MAS_DATABASE_POOL_SIZE=10
HIJRAAH_MAS_DATABASE_MAX_OVERFLOW=20

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_URL=redis://localhost:6379
HIJRAAH_MAS_REDIS_DB=0
HIJRAAH_MAS_REDIS_PASSWORD=

# =============================================================================
# AI Model Configuration
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
HIJRAAH_MAS_DEFAULT_MODEL=gpt-4o
HIJRAAH_MAS_MAX_TOKENS=4000
HIJRAAH_MAS_TEMPERATURE=0.1

# =============================================================================
# AgentOps Configuration
# =============================================================================
AGENTOPS_API_KEY=your-agentops-api-key
HIJRAAH_MAS_AGENTOPS_ENABLED=true

# =============================================================================
# Logging Configuration
# =============================================================================
HIJRAAH_MAS_LOG_LEVEL=INFO
HIJRAAH_MAS_LOG_FORMAT=json
HIJRAAH_MAS_LOG_FILE=./logs/hijraah-mas.log

# =============================================================================
# Security Configuration
# =============================================================================
HIJRAAH_MAS_SECRET_KEY=your-secret-key-change-in-production
HIJRAAH_MAS_ACCESS_TOKEN_EXPIRE_MINUTES=30
HIJRAAH_MAS_CORS_ORIGINS=http://localhost:3000,https://hijraah.com

# =============================================================================
# Agent Configuration
# =============================================================================
HIJRAAH_MAS_AGENT_TIMEOUT=300
HIJRAAH_MAS_MAX_CONCURRENT_AGENTS=10
HIJRAAH_MAS_AGENT_RETRY_ATTEMPTS=3
HIJRAAH_MAS_AGENT_RETRY_DELAY=1.0

# =============================================================================
# Tool Configuration
# =============================================================================
HIJRAAH_MAS_TOOL_TIMEOUT=60
HIJRAAH_MAS_ENABLE_WEB_SEARCH=true
HIJRAAH_MAS_ENABLE_DOCUMENT_PROCESSING=true

# =============================================================================
# Vector Database Configuration
# =============================================================================
HIJRAAH_MAS_VECTOR_DB_URL=
HIJRAAH_MAS_VECTOR_DIMENSION=1536
HIJRAAH_MAS_VECTOR_SIMILARITY_THRESHOLD=0.8

# =============================================================================
# Monitoring Configuration
# =============================================================================
HIJRAAH_MAS_ENABLE_METRICS=true
HIJRAAH_MAS_METRICS_PORT=9090
HIJRAAH_MAS_HEALTH_CHECK_INTERVAL=30

# =============================================================================
# Rate Limiting Configuration
# =============================================================================
HIJRAAH_MAS_RATE_LIMIT_REQUESTS=100
HIJRAAH_MAS_RATE_LIMIT_WINDOW=60

# =============================================================================
# File Storage Configuration
# =============================================================================
HIJRAAH_MAS_UPLOAD_MAX_SIZE=10485760
HIJRAAH_MAS_ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,jpeg,png
HIJRAAH_MAS_STORAGE_PATH=./storage

# =============================================================================
# Docker Configuration
# =============================================================================
WAIT_FOR_REDIS=false
RUN_MIGRATIONS=false
VALIDATE_CONFIG=true
HEALTH_URL=http://localhost:8000/health
HEALTH_TIMEOUT=10
HEALTH_MAX_RETRIES=3

# =============================================================================
# Development Configuration
# =============================================================================
# Uncomment for development
# HIJRAAH_MAS_DEBUG=true
# HIJRAAH_MAS_LOG_LEVEL=DEBUG
# HIJRAAH_MAS_RELOAD=true

# =============================================================================
# Production Configuration
# =============================================================================
# Uncomment for production
# HIJRAAH_MAS_ENVIRONMENT=production
# HIJRAAH_MAS_DEBUG=false
# HIJRAAH_MAS_LOG_LEVEL=INFO
# HIJRAAH_MAS_RELOAD=false
# HIJRAAH_MAS_WORKERS=4